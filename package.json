{
	"name": "root",
	"private": true,
	"scripts": {
		"lint": "wp-scripts lint-js ./packages",
		"format": "wp-scripts format-js ./packages",
		"lerna:test": "lerna run test"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:yardinternet/gutenberg-packages.git"
	},
	"bugs": {
		"url": "https://github.com/yardinternet/gutenberg-packages.git/issues"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"npm run lint",
			"npm run format"
		]
	},
	"devDependencies": {
		"@wordpress/scripts": "^7.1.0",
		"husky": "^4.2.1",
		"lerna": "^3.16.4",
		"lint-staged": "^10.0.7",
		"prettier": "npm:wp-prettier@1.19.1"
	}
}
