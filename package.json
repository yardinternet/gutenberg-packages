{
	"name": "gutenberg-packages",
	"version": "1.0.0",
	"description": "Monorepo contains all gutenberg packages",
	"author": "Yard Internet",
	"license": "ISC",
	"private": true,
	"scripts": {
		"lint": "wp-scripts lint-js ./packages",
		"format": "wp-scripts format-js ./packages",
		"lerna:test": "lerna run test",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:yardinternet/gutenberg-packages.git"
	},
	"bugs": {
		"url": "https://github.com/yardinternet/gutenberg-packages/issues"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"npm run lint",
			"npm run format"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.8.4",
		"@wordpress/scripts": "^7.1.0",
		"babel-loader": "^8.0.6",
		"husky": "^4.2.1",
		"lerna": "^3.16.4",
		"lint-staged": "^10.0.7",
		"prettier": "npm:wp-prettier@1.19.1"
	},
	"dependencies": {
		"@emotion/core": "^10.0.27",
		"@emotion/styled": "^10.0.27",
		"@wordpress/babel-plugin-import-jsx-pragma": "^2.5.0",
		"@wordpress/blocks": "^6.12.0",
		"@wordpress/components": "^9.2.0",
		"@wordpress/data": "^4.14.0",
		"classnames": "^2.2.6",
		"react": "^16.12.0",
		"react-dom": "^16.12.0"
	}
}
